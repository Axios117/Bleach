{
  "name": "bleach",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"yarn run dev:client\" \"yarn run dev:server\"",
    "compile": "concurrently \"yarn run dev:client\" \"yarn run compile:server\"",
    "dev:client": "lerna exec --scope=@bleach/client -- yarn start",
    "dev:server": "lerna exec --scope=@bleach/server -- yarn start",
    "compile:server": "lerna exec --scope=@bleach/server -- yarn run server:watch",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged && yarn run lint",
    "lint": "tslint \"packages/**/*.ts\" --exclude \"packages/**/node_modules/**\""
  },
  "devDependencies": {
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-conventional": "^6.0.2",
    "@types/node": "^9.3.0",
    "concurrently": "^3.5.1",
    "husky": "^0.14.3",
    "lerna": "^2.6.0",
    "lint-staged": "^6.0.1",
    "prettier": "1.10.2",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "workspaces": ["packages/*"],
  "lint-staged": {
    "*.{ts,js,json,css,md}": ["prettier --write", "git add"]
  }
}
